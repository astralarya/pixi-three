{
  "name": "@astralarium/pixi-three",
  "version": "0.0.14",
  "type": "module",
  "description": "Write declarative apps seamlessly blending 2d and 3d components in React",
  "license": "MIT",
  "author": "Mara Kim <mara@astralarium.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/astralarium/pixi-three"
  },
  "keywords": [
    "pixi",
    "three",
    "react",
    "webgpu"
  ],
  "bugs": {
    "url": "https://github.com/astralarium/pixi-three/issues"
  },
  "homepage": "https://astralarium.github.io/pixi-three",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently -P \"typedoc --watch --preserveWatchOutput\" \"vite --config vite.pages.config.ts {@}\" --",
    "build": "tsc -b && eslint . && vite build && pnpm pack --out pack/%s-%v.tgz",
    "build:pages": "typedoc && NODE_TLS_REJECT_UNAUTHORIZED=0 vite build --config vite.pages.config.ts",
    "lint": "eslint .",
    "preview": "vite preview --config vite.pages-preview.config.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/pixi-three.js"
    }
  },
  "imports": {
    "#*": "./src/*"
  },
  "peerDependencies": {
    "@pixi/react": "^8.0.5",
    "@react-three/fiber": "^9.5.0",
    "its-fine": "^2.0.0",
    "pixi.js": "*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": ">0.180.0",
    "tunnel-rat": "^0.1.2"
  },
  "devDependencies": {
    "@base-ui/react": "^1.1.0",
    "@eslint/js": "^9.39.2",
    "@pixi/react": "^8.0.5",
    "@react-three/fiber": "^9.5.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-router": "^1.154.5",
    "@tanstack/react-start": "^1.154.5",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.0.0",
    "its-fine": "^2.0.0",
    "lucide-react": "^0.562.0",
    "pixi.js": "https://pkg.pr.new/pixijs/pixijs/pixi.js@11846",
    "prettier": "^3.8.1",
