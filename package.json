    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "three": "^0.182.0",
    "tunnel-rat": "^0.1.2",
    "tw-animate-css": "^1.4.0",
    "typedoc": "^0.28.16",
    "typedoc-rhineai-theme": "^1.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^6.0.4"
  },
  "dependencies": {
    "three-mesh-bvh": "^0.9.7"
  }
